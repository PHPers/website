---
layout: default
homepage: true
generator: pagination
pagination:
  max_per_page: 10
use:
  - posts
---

{% block intro %}
    {% set upcommingMeetups = [] %}
    {% for post in page.pagination.items | reverse %}
        {% if date(post.date) >= date('today') %}
            {% set upcommingMeetups = upcommingMeetups | merge([post]) %}
        {% endif %}
    {% endfor %}

    {% set nextUpcommingMeetup = upcommingMeetups | first %}
    {% if nextUpcommingMeetup %}
        <section class="intro">
            <div class="row banner">
                <div class="small-12 columns">
                    <p class="h1">Kolejny meetup za</p>
                    <ul id="counter" class="row" data-date="{{ nextUpcommingMeetup.date | date('Y-m-d') }}" data-time="{{ nextUpcommingMeetup.time }}">
                        <li>
                            <a href="{{ nextUpcommingMeetup.url }}">
                                <span id="days" class="time-counter">&nbsp;</span>dni
                            </a>
                        </li>
                        <li>
                            <a href="{{ nextUpcommingMeetup.url }}">
                                <span id="hours" class="time-counter">&nbsp;</span>godz<span class="ending">in</span>
                            </a>
                        </li>
                        <li>
                            <a href="{{ nextUpcommingMeetup.url }}">
                                <span id="minutes" class="time-counter">&nbsp;</span>min<span class="ending">ut</span>
                            </a>
                        </li>
                        <li>
                            <a href="{{ nextUpcommingMeetup.url }}">
                                <span id="seconds" class="time-counter">&nbsp;</span>sek<span class="ending">und</span>
                            </a>
                        </li>
                    </ul>
                    {% if nextUpcommingMeetup.venue['city'] %}
                        {% set city = nextUpcommingMeetup.venue['city'] %}
                    {% elseif nextUpcommingMeetup.city %}
                        {% set city = nextUpcommingMeetup.city %}
                    {% endif %}

                    {% if city is defined %}
                        <p class="h2 meetup-location">{{ city }}</a>
                    {% endif %}
                    {#<p class="h2 meetup-location">Rawa Mazowiecka</a>#}
                    </p>
                </div>
            </div>
        </section>
    {% endif %}
{% endblock %}
